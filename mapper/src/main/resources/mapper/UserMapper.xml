<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gavin.test.dao.UserMapper">
    <!--用于与数据库字段作一一对应-->
    <resultMap id="userMap" type="com.gavin.test.entity.User">
        <result column="id" property="id"/>
        <result column="account" property="name"/>
    </resultMap>

    <!--查询下方列出的所有列-->
    <sql id="allColumns">
        id, account
    </sql>

    <!--定义表名-->
    <sql id="tableName">
        sys_user
    </sql>

    <select id="all" resultMap="userMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        ORDER BY id DESC
    </select>

</mapper>